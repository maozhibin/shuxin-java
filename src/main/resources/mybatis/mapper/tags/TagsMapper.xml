<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baoquan.shuxin.dao.tag.TagsDao" >
  <resultMap id="BaseResultMap" type="com.baoquan.shuxin.model.tag.Tags" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
  </resultMap>
  
    <select id="queryNamesByIds" resultType="java.lang.String">
	    SELECT
		    name 
		from tags 
		    WHERE id in 
		    <foreach collection="tagIdList" item="id" open="(" close=")"
		    separator=",">
		    #{id}
	    </foreach>
    </select>
  
</mapper>