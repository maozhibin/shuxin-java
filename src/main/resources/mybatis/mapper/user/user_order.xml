<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baoquan.shuxin.dao.user.UserOrderDao" >

  <select id="querUserOrderInfo" resultType="com.baoquan.shuxin.model.user.UserOrder">
    SELECT 	id,user_id,buy_time,status FROM`user_product` where 1 = 1 <include refid="taskQuery" />
    <if test="page != null">
      limit ${page.startIndex},${page.pageSize};
    </if>
  </select>
  <sql id="taskQuery">
    <if test="id != null">
      and id=#{id}
    </if>
    <if test="user_id != null">
      and user_id = #{userId}
    </if>
    <if test="buy_time != null ">
      and buy_time=#{buyTime}
    </if>
    <if test="status != null">
      and status=#{status}
    </if>
  </sql>




</mapper>